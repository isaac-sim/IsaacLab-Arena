{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Attach to debugpy session",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/workspaces/isaac_arena"
                }
            ]
        },
        {
            "name": "Python: Train RL Policy",
            "type": "python",
            "request": "launch",
            "args" : ["--num_envs", "1",
            "--env_spacing", "10",
            "lift_object"],
            "program": "${workspaceFolder}/isaaclab_arena/scripts/reinforcement_learning/train.py",
            "console": "integratedTerminal"
        }
    ]
}
